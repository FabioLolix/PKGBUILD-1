pkgname=cie-middleware
pkgver=1.2.1
pkgrel=1
pkgdesc="Middleware della CIE (Carta di Identit√† Elettronica) per Linux"
arch=('x86_64')
url="https://developers.italia.it/it/cie"
license=('BSD')
depends=('gcc-libs' 'glibc' 'openssl' 'java-runtime' 'pcsclite')
install="${pkgname}.install"
_shortname=cieid

source=("https://github.com/italia/${pkgname}-linux/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.gz"
    "${_shortname}.desktop"
    "${_shortname}.sh"
'LICENSE')

sha256sums=('f9cfae323a1a065d86dd00ceba539570f3d1cd7ae095c1cf0e9eda4b31d945c9'
            '3fe10b9df138721fb568fa016d703717b9b825884b221a95c3c19ac27409ba65'
            'b4918f7f7b370c62bf82d13c41644dc6bf5a5e319a9c9580dd4a3d0785688be3'
            'bf2723ca68a1f406557a3174f9195dbdc6171cbf8f7ad83f56546ac592a9ea8e')

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    install -dm755 "${pkgdir}/usr/share/CIEID"
    install -Dm755 CIEID/logo_circle.png "${pkgdir}/usr/share/pixmaps/${_shortname}.png"
    cp -r CIEID/*.jar "${pkgdir}/usr/share/CIEID"
    install -Dm755 libcie-pkcs11.so "${pkgdir}/usr/local/lib/libcie-pkcs11.so"
    install -Dm644 "../${_shortname}.desktop" "${pkgdir}/usr/share/applications/${_shortname}.desktop"
    install -Dm755 "../${_shortname}.sh" "${pkgdir}/usr/bin/${_shortname}"
    install -Dm644 ../LICENSE "${pkgdir}/usr/share/licenses/${_shortname}/LICENSE"
}
