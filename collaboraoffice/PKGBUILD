prepare() {

	cd "core-cp-${pkgver}-${_rel}"

	# fix not upstreamable pyuno paths - FS#54250
	patch -Np1 -i "${srcdir}"/make-pyuno-work-with-system-wide-module-install.diff
    patch -Np1 -i "${srcdir}"/cmis.patch 
	# move external sources into place
	if [ ! -d "${srcdir}/ext_sources" ]; then
		mkdir "${srcdir}/ext_sources"
	fi
	pushd "${srcdir}"/ext_sources || exit
	for source in "${noextract[@]}"; do
		rm -rf "${source}"
		ln -s "${srcdir}/${source}" .
	done
	popd || exit

	for module in "${_gitsubmodules[@]}"; do
		rm -rf "${module}"
		ln -s "${srcdir}/$module-co-${pkgver}-${_rel}" "${module}"
	done

	#use the CFLAGS but remove the LibO overridden ones
	for i in $CFLAGS; do
		case "$i" in
		-O? | -pipe | -Wall | -g | -fexceptions) continue ;;
		esac
		ARCH_FLAGS="$ARCH_FLAGS $i"
	done
	#cp ../download.lst .
}

build() {
	cd "core-cp-${pkgver}-${_rel}"

	# strip -s from Makeflags in case you use it to shorten build logs
	_MAKEFLAGS=${MAKEFLAGS/-s/}

	# http://site.icu-project.org/download/61#TOC-Migration-Issues
	CPPFLAGS+=' -DU_USING_ICU_NAMESPACE=1'
	echo "lo_sources_ver=${pkgver}.${_rel}" >sources.ver

	./autogen.sh \
		--build=x86_64-linux-gnu \
		--disable-community-flavor \
		--disable-dbus \
		--disable-dconf \
		--disable-evolution2 \
		--disable-ext-ct2n \
		--disable-ext-nlpsolver \
		--disable-ext-numbertext \
		--disable-ext-wiki-publisher \
		--disable-fetch-external \
		--disable-firebird-sdbc \
		--disable-gio \
		--disable-gstreamer-1-0 \
		--disable-gtk3 \
		--disable-gui \
		--disable-kf5 \
		--disable-odk \
		--disable-online-update \
		--disable-poppler \
		--disable-postgresql-sdbc \
		--disable-qt5 \
		--disable-randr \
		--disable-report-builder \
		--disable-scripting-beanshell \
		--disable-scripting-javascript \
		--disable-sdremote \
		--disable-sdremote-bluetooth \
		--enable-extension-integration \
		--enable-lto \
		--enable-mergelibs \
		--enable-mpl-subset \
		--enable-noto-font \
		--enable-python=system \
		--enable-release-build \
		--enable-release-build \
		--enable-split-app-modules \
		--host=x86_64-linux-gnu \
		--libdir=/usr/lib --mandir=/usr/share/man \
		--prefix=/usr --exec-prefix=/usr --sysconfdir=/etc \
		--target=x86_64-linux-gnu \
		--with-branding=icon-themes/galaxy/brand_cp \
		--with-external-dict-dir=/usr/share/hunspell \
		--with-external-hyph-dir=/usr/share/hyphen \
		--with-external-tar="${srcdir}/ext_sources" \
		--with-external-thes-dir=/usr/share/mythes \
		--with-fonts \
		--with-galleries=no \
		--with-linker-hash-style=both \
		--with-myspell-dicts \
		--with-parallelism="${_MAKEFLAGS/-j/}" \
		--with-system-boost \
		--with-system-cairo \
		--with-system-clucene \
		--with-system-curl \
		--with-system-dicts \
		--with-system-expat \
		--with-system-libstaroffice \
		--with-system-glm \
		--with-system-graphite \
		--with-system-harfbuzz \
		--with-system-headers \
		--with-system-hunspell \
		--with-system-icu \
		--with-system-jars \
		--with-system-jpeg \
		--with-system-lcms2	\
		--with-system-libexttextcat \
		--with-system-liblangtag \
		--with-system-libpng \
		--with-system-libs \
		--with-system-libxml \
		--with-system-mdds \
		--with-system-mythes \
		--with-system-nss \
		--with-system-openssl \
		--with-system-orcus \
		--with-system-postgresql \
		--with-system-zlib \
		--with-theme=colibre_svg \
		--with-vendor="Arch Linux" \
		--without-help \
		--without-fonts \
		--without-java \
		--without-junit \
		--disable-qrcodegen \
		--with-lang=ar as ast bg bn-IN br ca ca-valencia cy cs da de el en-US en-GB es et eu fi fr ga gd gl gu he hi hr hu id is it ja km kn ko lt lv ml mr nb nl nn oc or pa-IN pl pt pt-BR ro ru sk sl sr sr-Latn sv ta te tr uk vi zh-CN zh-TW \
		--with-webdav=serf \
		--disable-lotuswordpro \
		--disable-lpsolve \
		--enable-symbols \
		--enable-sal-log \
		--with-gdrive-client-id=${_google_default_client_id} \
		--with-gdrive-client-secret=${_google_default_client_secret} \
		--disable-dependency-tracking

	make build-nocheck

	mkdir "${srcdir}"/fakeinstall
	make DESTDIR="${srcdir}"/fakeinstall distro-pack-install
}

