USER=vdr
HOME=/var/lib/vdr

post_install() {
    getent passwd ${USER} &>/dev/null || {
        echo -n ">>> Creating ${USER} user... "
        useradd --system --user-group --home ${HOME} ${USER}
        echo "done"
    }
    post_upgrade
}

post_upgrade() {
    systemd-tmpfiles --create i2pd.conf
    chown -R ${USER}:${USER} ${HOME}
        chmod -R o-rwx ${HOME}
}
